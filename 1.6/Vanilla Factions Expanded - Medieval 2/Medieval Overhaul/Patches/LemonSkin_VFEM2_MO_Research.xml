<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ResearchProjectDef[defName="LemonSkin_LeatherArmour"]/prerequisites</xpath>
    <value>
      <prerequisites>
        <li>DankPyon_ProtectiveClothing</li>
      </prerequisites>
    </value>
  </Operation>
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ResearchProjectDef[defName="LemonSkin_LeatherArmour"]</xpath>
    <value>
      <hiddenPrerequisites>
        <li>DankPyon_LeatherTanning</li>
      </hiddenPrerequisites>
    </value>
  </Operation>
  <!-- Move Leather armor research-->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="LemonSkin_LeatherArmour"]/researchViewX</xpath>
    <value>
      <researchViewX>9</researchViewX>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="LemonSkin_LeatherArmour"]/researchViewY</xpath>
    <value>
      <researchViewY>1.2</researchViewY>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="LemonSkin_LeatherArmour"]/tab</xpath>
    <value>
      <tab>DankPyon_MedievalResearchTab</tab>
    </value>
  </Operation>
  <!-- Move Royal Apparel -->
  <Operation Class="PatchOperationConditional">
    <xpath>/Defs/ResearchProjectDef[defName="RoyalApparel"]/researchViewY</xpath>
    <match Class="PatchOperationReplace">
      <xpath>/Defs/ResearchProjectDef[defName="RoyalApparel"]/researchViewY</xpath>
      <value>
        <researchViewY>0</researchViewY>
      </value>
    </match>
  </Operation>
  <!-- Move Adorned Armor -->
  <Operation Class="PatchOperationReplace">
    <xpath>/Defs/ResearchProjectDef[defName="DankPyon_AdornedArmor"]/researchViewY</xpath>
    <value>
      <researchViewY>0.70</researchViewY>
    </value>
  </Operation>
</Patch>
