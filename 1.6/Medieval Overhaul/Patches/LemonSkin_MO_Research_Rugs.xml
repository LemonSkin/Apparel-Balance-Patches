<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Base rugs -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="DankPyon_FurnitureBaseRug"]/researchPrerequisites</xpath>
    <value>
      <researchPrerequisites>
        <li>LemonSkin_MO_Rugs</li>
      </researchPrerequisites>
    </value>
  </Operation>
  <!-- Royal rugs -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[@Name="DankPyon_RugRoyalBase"]/researchPrerequisites</xpath>
    <value>
      <researchPrerequisites>
        <li>LemonSkin_MO_Rugs</li>
        <li>DankPyon_RoyalRusticFurniture</li>
      </researchPrerequisites>
    </value>
  </Operation>
  <!-- Silk rugs -->
  <Operation Class="PatchOperationAdd">
    <xpath>Defs/ThingDef[@Name="DankPyon_Rug_LootOnlyBase"]</xpath>
    <value>
      <researchPrerequisites>
        <li>LemonSkin_MO_Rugs</li>
        <li>DankPyon_Silk</li>
      </researchPrerequisites>
    </value>
  </Operation>
</Patch>
