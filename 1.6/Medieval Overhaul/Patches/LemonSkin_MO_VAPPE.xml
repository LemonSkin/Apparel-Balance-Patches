<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Apparel Expanded</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Footwear_BootsLeather"]/label</xpath>
          <value>
            <label>jackboots</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Footwear_BootsLeather"]/costStuffCount</xpath>
          <value>
            <costStuffCount>35</costStuffCount>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Footwear_BootsLeather"]/statBases/MaxHitPoints</xpath>
          <value>
            <MaxHitPoints>100</MaxHitPoints>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Footwear_BootsLeather"]/statBases/EquipDelay</xpath>
          <value>
            <EquipDelay>2</EquipDelay>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="DankPyon_Handwear_GlovesLeather"]/statBases/MaxHitPoints</xpath>
          <value>
            <MaxHitPoints>100</MaxHitPoints>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
