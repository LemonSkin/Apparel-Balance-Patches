<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Anomaly</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Apparel_LabCoat"]/label</xpath>
          <value>
            <label>chemist's lab coat</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Apparel_LabCoat"]/equippedStatOffsets/ResearchSpeed</xpath>
          <value>
            <ResearchSpeed>0.05</ResearchSpeed>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
