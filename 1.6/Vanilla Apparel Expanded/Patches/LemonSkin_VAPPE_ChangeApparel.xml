<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <!-- Naming consistency stuff -->
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VAE_Apparel_PeltCoat"]/label</xpath>
    <value>
      <label>pelt coat</label>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VAE_Apparel_TribalPoncho"]/label</xpath>
    <value>
      <label>tribal poncho</label>
    </value>
  </Operation>
  <Operation Class="PatchOperationReplace">
    <xpath>Defs/ThingDef[defName="VAE_Apparel_TribalKilt"]/label</xpath>
    <value>
      <label>tribal kilt</label>
    </value>
  </Operation>
  <!-- Medieval Overhaul Stuff -->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Medieval Overhaul</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Handwear_Gloves"]/label</xpath>
          <value>
            <label>mittens</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Handwear_Gloves"]/description</xpath>
          <value>
            <description>A simple pair of mittens.</description>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Handwear_Gloves"]/techLevel</xpath>
          <value>
            <techLevel>Medieval</techLevel>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Apparel_Trousers"]/label</xpath>
          <value>
            <label>formal trousers</label>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="VAE_Apparel_SuitJacket"]/label</xpath>
          <value>
            <label>formal jacket</label>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>
